@model List<SignalRQRReservationWebUI.Dtos.ChangeDtos.ResultChangeDto>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Değişimler</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Bütün Değişimler</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Değişimler ile ilgili işlemleri aşşağıdan gerçekleştirebilirsiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Başlık1</th>
									<th scope="col">Başlık2</th>
									<th scope="col">Foto</th>
									<th scope="col">Açıklama</th>
									<th scope="col">Tarih</th>
									<th scope="col">Kategori</th>
									<th scope="col">Durum</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									count++;
									<tr>
										<th>@count</th>
										<td>@item.Title1</td>
										<td>@item.Title2</td>
										<td>@item.ImageURL</td>
										<td>@item.Description</td>
										<td>@item.Date</td>
										<td>@item.CategoryName</td>
										<td>@item.ChangeStatus</td>
										<td><a href="/Change/DeleteChange/@item.ChangeID" class="btn btn-outline-danger">Sil</a></td>
										<td><a href="/Change/UpdateChange/@item.ChangeID" class="btn btn-outline-success">Güncelle</a></td>
									</tr>
								}

							</tbody>
						</table>
						<a href="/Change/CreateChange/" class="btn btn-outline-primary">Yeni Değişim Girişi</a>
					</div>
				</div>




			</div>

		</div>
	</div>
</div>



