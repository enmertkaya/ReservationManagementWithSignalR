@model SignalRQRReservationWebUI.Dtos.ChangeDtos.UpdateChangeDto

@{
    ViewData["Title"] = "UpdateChange";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}



<div class="container-fluid">
	<h4 class="page-title">Değişim İşlemleri</h4>
	<div class="row">
		<div class="col-md-12">
			<form method="post">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Değişim Güncelleme Sayfası</div>
					</div>
					<input type="hidden" asp-for="ChangeID" />
					<div class="card-body">
						<div class="form-group">
							<label for="changetitle1">Değişim Üst Başlığını Giriniz</label>
							<input type="text" class="form-control" asp-for="Title1" id="changetitle1">
						</div>
						<div class="form-group">
							<label for="changetitle2">Değişim Alt Başlığını Giriniz</label>
							<input type="text" class="form-control" asp-for="Title2" id="changetitle2">
						</div>
						<div class="form-group">
							<label for="date">Değişim Tarihini Giriniz</label>
							<input type="text" class="form-control" asp-for="Date" id="date">
						</div>

						<div class="form-group">
							<label for="imageurl">Ürün Görselini Giriniz</label>
							<input type="text" class="form-control" asp-for="ImageURL" id="imageurl">
						</div>

						<div class="form-group">
							<label for="price">Değişim Kategorisini Seçiniz</label>
							@Html.DropDownListFor(x=>x.CategoryID,(List<SelectListItem>)ViewBag.v, new {@class="form-control"})
						</div>

						<div class="form-group">
							<label for="description">Değişim Açıklamasını Giriniz</label>
							<input type="text" class="form-control" asp-for="Description" id="description">
						</div>
					</div>
					<div class="card-action">
						<button class="btn btn-primary">Değişimi Güncelle</button>
					</div>
				</div>
			</form>
		</div>

	</div>
</div>
</div>
