@model List<ResultHomePageDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Ana Sayfa İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">

				<div class="card">
					<div class="card-header">
						<div class="card-title">Ana Sayfa Bilgisi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Ana Sayfa ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Başlık1</th>
									<th scope="col">Açıklama1</th>
									<th scope="col">Başlık2</th>
									<th scope="col">Açıklama2</th>
									<th scope="col">Başlık3</th>
									<th scope="col">Açıklama3</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									count++;
									<tr>
										<th>@count</th>
										<td>@item.Title1</td>
										<td>@item.Descripton1</td>
										<td>@item.Title2</td>
										<td>@item.Descripton2</td>
										<td>@item.Title3</td>
										<td>@item.Descripton3</td>
										<td><a href="/HomePage/DeleteHomePage/@item.FeatureID" class="btn btn-outline-danger">Sil</a></td>
										<td><a href="/HomePage/UpdateHomePage/@item.FeatureID" class="btn btn-outline-success">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/HomePage/CreateHomePage/" class="btn btn-outline-primary">Yeni Ana Sayfa Girişi</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

